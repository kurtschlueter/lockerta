<div id='reviewformeducationtab' class='hidden'>

  <div class='row'>
      <div class="col-md-12">
      <div class='col-md-12 light-gray-div'>
        <div class="col-md-5">
          <img alt="Education Icon" class="img-responsive center-margin smaller-image" src="<%= asset_path( 'education_icon.png' ) %>">
        </div>
        <div class="col-md-7">
          <h1>Education</h1>
        </div>
      </div>
      </div>
    </div>

  <!-- Select Basic -->
  <div class="form-group row">
    <div class="col-md-5 col-md-offset-2">
      <label class="control-label" for="selectbasic"><h3 class="center-margin">School Difficulty</h3></label>
      <h4 class="center-margin low-font-weight">Difficulty of classes and coursework</h4>
    </div>
    <div class="col-md-3 stargin" id="e_school_difficulty">
      <%= render partial: 'stars_div' %>
    </div>
  </div>

  <!-- Select Basic -->
  <div class="form-group row">
    <div class="col-md-5 col-md-offset-2">
      <label class="control-label" for="selectbasic"><h3 class="center-margin">Academic Support</h3></label>
      <h4 class="center-margin low-font-weight">Academic assistance for athletes</h4>
    </div>
    <div class="col-md-3 stargin" id="e_academic_support">
      <%= render partial: 'stars_div' %>
    </div>
  </div>

  <!-- Select Basic -->
  <div class="form-group row">
    <div class="col-md-5 col-md-offset-2">
      <label class="control-label" for="selectbasic"><h3 class="center-margin">School Reputation</h3></label>
      <h4 class="center-margin low-font-weight">Academic reputation of the school</h4>
    </div>
    <div class="col-md-3 stargin" id="e_school_reputation">
      <%= render partial: 'stars_div' %>
    </div>
  </div>

  <!-- radio group -->
  <div class="form-group row">
    <div class="col-md-5 col-md-offset-2">
      <label class="control-label" for="radios"><h3 class="center-margin">Did you graduate?</h3></label>
    </div>
    <div class="col-md-3 col-md-offset-1">
      <label class="radio-inline" for="e_graduated_yes">
        <input type="radio" name="radios" id="e_graduated_yes" value="false" checked="checked">
        Yes
      </label>
      <label class="radio-inline" for="e_graduated_no">
        <input type="radio" name="radios" id="e_graduated_no" value="true">
        No
      </label>
    </div>
  </div>


  <!-- Textarea -->
  <div class="form-group row">
      <div class="col-md-6 col-md-offset-3 light-gray-div">
      <h4 class="text-center low-font-weight center-margin">Education Comments</h4>
      <br>
      <textarea class="form-control" id="e_comments" name="textarea" placeholder="What is the academic experience like?"></textarea>
    </div>
  </div>

  <!-- Button -->
  <div class="form-group row">
    <div class="col-md-1 col-md-offset-4">
      <button id="reviewformbacktolocation" name="singlebutton" class="btn btn-primary">Location</button>
    </div>
    <div class="col-md-1 col-md-offset-2">
      <button id="reviewformconfirmation" name="singlebutton" class="btn btn-primary">Confirmation</button>
    </div>
  </div>

</div>