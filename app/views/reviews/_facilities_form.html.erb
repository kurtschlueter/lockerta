<fieldset id='reviewformfacilitiestab' class='hidden'>

  <legend>
    <div class="col-md-4">
      <img alt="Facilities Icon" class="top-icon" src="<%= asset_path( 'facility_icon.png' ) %>">
      <h1>Facilities</h1>
    </div>
  </legend>

   <!-- Select Basic -->
  <div class="form-group">
    <label class="col-md-6 control-label" for="selectbasic">Main Arena</label>
    <div class="col-md-3">
      <%= render partial: 'stars_div' %>
    </div>
  </div>

  <!-- Select Basic -->
  <div class="form-group">
    <label class="col-md-6 control-label" for="selectbasic">Home Game Atmosphere</label>
    <div class="col-md-3">
      <%= render partial: 'stars_div' %>
    </div>
  </div>

  <!-- Select Basic -->
  <div class="form-group">
    <label class="col-md-6 control-label" for="selectbasic">Weight Room</label>
    <div class="col-md-3">
      <%= render partial: 'stars_div' %>
    </div>
  </div>

  <!-- Select Basic -->
  <div class="form-group">
    <label class="col-md-6 control-label" for="selectbasic">Locker Room</label>
    <div class="col-md-3">
      <%= render partial: 'stars_div' %>
    </div>
  </div>

  <!-- Select Basic -->
  <div class="form-group">
    <label class="col-md-6 control-label" for="selectbasic">Athletic Training Facility</label>
    <div class="col-md-3">
      <%= render partial: 'stars_div' %>
    </div>
  </div>

  <!-- Textarea -->
  <div class="form-group">
    <label class="col-md-6 control-label" for="textarea">Additional Comments About the Facilities</label>
    <div class="col-md-3">
      <textarea class="form-control" id="textarea" name="textarea"></textarea>
    </div>
  </div>

  <!-- Button -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="singlebutton"></label>
    <div class="col-md-1">
      <button id="reviewformbacktoheadcoach" name="singlebutton" class="btn btn-primary">Head Coach</button>
    </div>
    <div class="col-md-1">
      <button id="reviewformlocation" name="singlebutton" class="btn btn-primary">Location</button>
    </div>
  </div>

</fieldset>