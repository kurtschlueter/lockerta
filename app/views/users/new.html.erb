<div id="tf-home" class="text-center">
  <div class="container" id='graybox'>
      <div class="content">
        <h1>Register for JerseyTalk!
          <img alt="JerseyTalk" src="<%= asset_path( 'jticon.png' ) %>">
        </h1>
        <%= form_tag "/users/create" do %>
        <div class="row">
            <div class="col-md-3 col-md-offset-2 text-center login-label">School Attended: </div>
            <div class="col-md-3">
              <%= select_tag :school, options_from_collection_for_select(School.all, :id, :name), id: 'session_school_picked' %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-3 col-md-offset-2 text-center login-label">Sport Played:
            </div>
            <div class="col-md-3">
              <%= select_tag :sport, "<option>Select Program</option>".html_safe, id: 'program_select_user' %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-3 col-md-offset-2 text-center login-label">Jersey Number: </div>
            <div class="col-md-3">
              <%= number_field_tag :jersey_number %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-3 col-md-offset-2 text-center login-label">First Name: </div>
            <div class="col-md-3">
              <%= text_field_tag :first_name %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-3 col-md-offset-2 text-center login-label">Last Name: </div>
            <div class="col-md-3">
              <%= text_field_tag :last_name %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-3 col-md-offset-2 text-center login-label">Email: </div>
            <div class="col-md-3">
              <%= text_field_tag :email %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-3 col-md-offset-2 text-center login-label">Password: </div>
            <div class="col-md-3">
              <%= password_field_tag :password %>
            </div>
          </div>
          <br>
            <%= submit_tag "Sign Up", class: 'login-button' %>
        <% end %>

    </div>
  </div>
</div>
